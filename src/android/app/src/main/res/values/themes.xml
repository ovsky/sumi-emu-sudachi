        <item name="colorOnSecondaryContainer">@color/sumi_onSecondaryContainer</item>
        <item name="colorTertiary">@color/sumi_tertiary</item>
        <item name="colorOnTertiary">@color/sumi_onTertiary</item>
        <item name="colorTertiaryContainer">@color/sumi_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/sumi_onTertiaryContainer</item>
        <item name="colorError">@color/sumi_error</item>
